<style>

.contain{
	max-width:1000px;
  box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
  border-radius: 0.25rem;
  margin: auto;
  margin-top: 60px;
  background: rgb(249, 249, 249);
  padding: 1.25rem;
  border: 1px solid transparent;
  border-color : #ddd;
}


.box
{
flex : 1;
  margin-left : 15px;
  margin-right : 15px;
}
.wrap{


  display: block;
  margin-bottom: 25px;

}
#desktop-dp{

    box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
    border-radius: 0.25rem;
    padding: 0.25rem;
  height : 150px;
  width : 150px;
  display : none;
  border: 1px solid transparent;
  border-color : #ddd;
}

.left {
  flex: 1;
  order: 1;
  margin-right: 15px;
  margin-left: 15px;
  box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
  border-radius: 0.25rem;

}

.right {
  flex: 1;
  order: 2;
  margin-right: 15px;
  margin-left: 15px;
  box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
  border-radius: 0.25rem;
}

.desc {
  color: #333;
  background-color: #f5f5f5;
  border-color: #ddd;
  padding: 10px 15px;
  border-bottom: 2px solid transparent;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  border: 1px solid transparent;
  border-color : #ddd;
}

.val {
  padding: 15px;
  background-color: #FFFFFF;
  color: #575757 !important;
  border: 1px solid transparent;
  border-color : #ddd;
}



@media (min-width: 768px)
{

  .wrap {
    display: flex;
  }

  #desktop-dp {
    display:block;
  }
}


@media (max-width: 768px)
{
  .box{
    margin-bottom : 15px;
  }
}

</style>

<body>


<div class="contain">

<div class="dp">
