<script type="text/javascript">
var tagSubmitBtn=document.getElementById("tagSubmitBtn");
var tagname=document.getElementById("tagInputField");
var date=getCurrDate();

tagSubmitBtn.addEventListener("click",function(){

      var request = new XMLHttpRequest();
        request.addEventListener('load', function()
        {
          tagname.value="";
          
          //document.location.reload(true);
        });
        request.open('POST', '/addtag');
        request.setRequestHeader("Content-Type", "application/json");
        request.send(JSON.stringify({'tname' : tagname.value ,'createddate' : getCurrDate()}));

});

















function getCurrDate()
  {
  var today = new Date();
  var mon=today.getMonth();
  var month;
  if(mon==0)
  {
    month="Jan"
  }
  else if(mon==1)
  {
    month="Feb"
  }
  else if(mon==2)
  {
    month="Mar"
  }
  else if(mon==3)
  {
    month="Apr"
  }
  if(mon==4)
  {
    month="May"
  }
  else if(mon==5)
  {
    month="Jun"
  }
  else if(mon==6)
  {
    month="Jul"
  }
  else if(mon==7)
  {
    month="Aug"
  }
  if(mon==8)
  {
    month="Sep"
  }
  else if(mon==9)
  {
    month="Oct"
  }
  else if(mon==10)
  {
    month="Nov"
  }
  else if(mon==11)
  {
    month="Dec"
  }

  var hr=today.getHours();
  var set;
  if(hr>12)
  {
    hr=hr-12;
    set="PM";
  }
  else
  {
    set="AM";
  }
  var date = today.getDate()+'-'+month+'-'+today.getFullYear()+" ( "+hr+":"+today.getMinutes()+" "+set+" )";
  return date;
}
</script>
